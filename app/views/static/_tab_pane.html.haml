
#tab_pane
  #tabs
    %ul.tab_row
      %li#welcome_tab.tab.selected
        Welcome
      %li#projects_tab.tab
        Projects
      %li#blog_tab.tab
        Blog
      %li#about_me_tab.tab
        About

  #tabbed_content_pane

    #welcome_content.tabbed_content
      = render "static/welcome_content"

    #projects_content.tabbed_content
      - @projects.each do |project|
        = render "shared/project_display", project: project
        %br

    #blog_content.tabbed_content
      - @posts.each do |post|
        = render "shared/post_display", post: post
        %br

    #about_me_content.tabbed_content
      = render "static/about_me"