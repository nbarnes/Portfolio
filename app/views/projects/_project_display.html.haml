
.project

  - if project != nil

    = link_to project.title, project, :class => "entry_title title"
    - if !project.published?
      %span.unpublished_label
        \ - Unpublished
    %br
    = link_to "Comments", project_path(project, anchor: 'disqus_thread'), :class => "entry_comments_link"

    = markdown project.content
    .project_image
      - if project.image != ""
        = image_tag project.image, class: 'project_image'

  - else
    No project with that ID found