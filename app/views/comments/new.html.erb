<p id="notice"><%= notice %></p>

<% klass = @commentable.class.name.downcase %>
<%= render "shared/#{ klass }_display", commentable: @commentable %>

<% @commentable.comments.each do |comment| %>
  <b>Comment:</b>
  <%= comment.content %><br />&nbsp&nbsp&nbsp&nbsp
  <%= " - #{ comment.author_email }" %>
  <br /><br />
<% end %>

<%= render 'form' %>

<%= link_to 'Back', @commentable %>
